APP_NAME="MSC Wound Portal Testing"
APP_ENV=testing
APP_KEY=base64:test_key_for_testing_only_do_not_use_in_production
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Use SQLite for testing (faster than SQL Server)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Disable external services in tests
MAIL_MAILER=array
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# FHIR Test Configuration
FHIR_BASE_URL=http://localhost:8080/fhir
FHIR_TENANT_ID=test-tenant
FHIR_CLIENT_ID=test-client
FHIR_CLIENT_SECRET=test-secret

# Docuseal Test Configuration
DOCUSEAL_API_KEY=test-api-key
DOCUSEAL_API_URL=http://localhost:8081/api

# Disable rate limiting in tests
RATE_LIMIT_ENABLED=false

# Disable CSRF for API tests
CSRF_ENABLED=false